@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-city="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a>

    @foreach (string city in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-city="@city" asp-route-pageNum="1"
           class="btn @(ViewBag.SelectedType == city ? "btn-primary" : "btn-outline-secondary")">@city</a>
    }
</div>